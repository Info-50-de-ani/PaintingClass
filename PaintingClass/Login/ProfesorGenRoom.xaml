<Page x:Class="PaintingClass.Login.ProfesorGenRoom"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:uc ="clr-namespace:PaintingClass.UserControls" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfesorGenRoom">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <!--De factut listbox cu numele participantilor-->
        <StackPanel Grid.Row="1">
            <uc:LimitedLengthTextBox Width="200" Height="20" MaxTextLength="30"/>
            <!--Cu un event de apasat enter dectetam adaugarea-->
            <!--Sau alta metoda de vertificare a textului-->
            <ListBox x:Name="AllowedNames" Visibility="Collapsed">
                <ListBoxItem>cineva</ListBoxItem>
            </ListBox>
            <Button Margin="10"
                    Padding="2"
                    Content="Creeaza o camera noua"
                    HorizontalAlignment="Center"
                    Height="30"
                    Click="GenRoom_Button_Click"/>
        </StackPanel>
    </Grid>
</Page>
