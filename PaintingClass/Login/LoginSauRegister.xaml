<Page x:Class="PaintingClass.Login.LoginSauRegister"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PaintingClass.Login"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginSauRegister">
    <Grid>
      <!--#region Select Registration Option-->
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <!-- Login sau Register-->
        <StackPanel x:Name="LoginOrRegister" VerticalAlignment="Center" Grid.Row="1" Height="110" Visibility="Visible">
            <!--Login-->
            <Button Content="Login"  Width="100" Height="30" Grid.Row="1" Margin="5" Click="Select_Login_Button_Click"/>
            <!--Register-->
            <Button Content="Register" Width="100" Height="30" Click="Select_Register_Button_Click"/>
            <!--Injector-->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                <Button Content="Inject profToken" Width="100" Height="30" Click="Inject_Click"/>
                <TextBox x:Name="injectorText" Margin="10,5,0,0" MinWidth="80">1234</TextBox>
            </StackPanel>
        </StackPanel>
      <!--#endregion-->
        
        
      <!--#region Login menu -->
        <Grid x:Name="LoginMenu" Grid.Row="1" Grid.RowSpan="2" Visibility="Hidden">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <!--Name-->
            <TextBlock Foreground="White" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center">Email:</TextBlock>
            <TextBox x:Name="TB_Login_Email" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1" Width="200" Margin="10" Grid.Row="0" ></TextBox>
            <!--Password-->
            <TextBlock Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="1">Password:</TextBlock>
            <PasswordBox x:Name="TB_Login_Password" VerticalAlignment="Center" Grid.Column="1" Width="200" Margin="10" HorizontalAlignment="Left" Grid.Row="1" MaxLength="16"></PasswordBox>
            <!--Login Button-->
            <!--Name Erorr-->
            <StackPanel Grid.Column="0" 
                        Grid.RowSpan="1"
                        Grid.Row="4"
                        Grid.ColumnSpan="2">
                <TextBlock x:Name="TB_Login_Error" 
                           Text=""
                           Visibility="Visible"
                           Foreground="Red"
                           HorizontalAlignment="Center">
                </TextBlock>
                <Button Margin="0,10,0,0"
                        Content="Login" 
                        Click="EnterINFO_Login_Button_Click"  
                        Width="100"
                        HorizontalAlignment="Center"
                        Height="30">
                </Button>
            </StackPanel>
        </Grid>
      <!--endregion-->
        
      <!--#region Register menu-->
        <Grid x:Name="RegisterMenu" Grid.Row="0" Grid.RowSpan="3" Visibility="Hidden">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <!--Name-->
            <TextBlock Foreground="White" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center" >Name:</TextBlock>
            <TextBox x:Name="TB_Register_Name" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1" Width="200" Margin="10" Grid.Row="0" TextChanged="TB_Register_Name_TextChanged" ></TextBox>
            <!--Email-->
            <TextBlock Foreground="White" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center">Email:</TextBlock>
            <TextBox  x:Name="TB_Register_Email" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1" Width="200" Margin="10" Grid.Row="1" TextChanged="TB_Register_Email_TextChanged" ></TextBox>
            <!-- Password-->
            <TextBlock Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="2">Password:</TextBlock>
            <PasswordBox x:Name="TB_Register_Password" VerticalAlignment="Center" Grid.Column="1" Width="200" Margin="10" HorizontalAlignment="Left" Grid.Row="2" MaxLength="16" PasswordChanged="TB_Register_Password_PasswordChanged"></PasswordBox>
            <!-- Confirm Password -->
            <TextBlock Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="3">Confirm Password:</TextBlock>
            <PasswordBox x:Name="TB_Register_Password_Confirm" VerticalAlignment="Center" Grid.Column="1" Width="200" Margin="10" HorizontalAlignment="Left" Grid.Row="3" MaxLength="16" PasswordChanged="TB_Register_Password_Confirm_PasswordChanged"></PasswordBox>
            <!--Register button-->
            <!--Provizoriu duce direct la genroom-->
            <StackPanel Grid.ColumnSpan="2"
                        Grid.Row="4"
                        Grid.Column="0"
                        Grid.RowSpan="1">
                <TextBlock x:Name="TB_Register_Error" 
                           Text="Idasiodha"
                           Visibility="Collapsed"
                           Foreground="Red" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,10">
                </TextBlock>
                <Button Content="Register"
                        Click="EnterINFO_Register_Button_Click" 
                        Width="100"
                        HorizontalAlignment="Center"
                        Height="30">
                </Button>
            </StackPanel>
        </Grid>
      <!--#endregion-->
        
      <!--#region Registration Succes Screen-->

        <!--TODO Ceva animatii si design -->
        <Grid x:Name="Registration_Succes_Screen"
                    Visibility="Hidden"
                    Grid.Row="1">
            <TextBlock Foreground="White" HorizontalAlignment="Center"
                       VerticalAlignment="Center">Inregistrare finalizata!</TextBlock>
        </Grid>
        
      <!--#endregion-->
        
      <!--#region Login Succes Screen-->

        <!--TODO Ceva animatii si design -->
        <Grid x:Name="Login_Succes_Screen"
                        Visibility="Hidden"
                        Grid.Row="1">
            <TextBlock Foreground="White" HorizontalAlignment="Center"
                           VerticalAlignment="Center">Logare finalizata!</TextBlock>
        </Grid>
        
      <!--#endregion-->
        
      <!--#region Login Not Logged in Screen-->
        <!--TODO Ceva animatii si design -->
        <Grid x:Name="Login_Already_Logged_Screen"
                        Visibility="Hidden"
                        Grid.Row="1">
            <TextBlock Foreground="White" HorizontalAlignment="Center"
                           VerticalAlignment="Center">NU sunteti inregistrat inca!</TextBlock>
        </Grid>
      <!--#endregion-->

      <!--#region Register Waiting For Confirmation Screen-->
      <!--TODO Ceva animatii si design -->
      <Grid x:Name="Registration_Waiting_For_Confirmation_Screen"
                      Visibility="Hidden"
                      Grid.Row="1">
        <StackPanel>
          <TextBlock Foreground="White" 
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center">V-am trimis un mesaj de confirmare pe emailul introdus.
          </TextBlock>
          <TextBlock Foreground="White"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center">
               Va rugam sa urmati instructiunile din email pentru a continua.
          </TextBlock>
        </StackPanel>
      </Grid>
      <!--#endregion-->
    </Grid>
</Page>
