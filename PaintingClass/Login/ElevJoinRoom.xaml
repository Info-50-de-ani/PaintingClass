<Page x:Class="PaintingClass.Login.ElevJoinRoom"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PaintingClass.Login"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ElevJoinRoom">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <!--Enter Code-->
        <TextBlock Grid.Row="0" Text="Introduceti Codul:  " Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center" />
        <TextBox x:Name="roomId"  Grid.Row="0" Grid.Column="1"  Width="200" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBox>
        
        <!--Enter name-->
        <TextBlock Margin="0,20,0,0" Grid.Row="1" Text="Introduceti Numele:  " Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center" />
        <TextBox x:Name="name" Grid.Row="1" Grid.Column="1"  Width="200" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBox>

        <Button Margin="0,20,0,0" MinWidth="40" HorizontalAlignment="Center" Click="Button_Click">Go</Button>
    </StackPanel>
</Page>
