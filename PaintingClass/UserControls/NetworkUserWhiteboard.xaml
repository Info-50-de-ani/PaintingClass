        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" FontSize="20" Text="{Binding name}"/>
            <Button x:Name="shareButton" Grid.Column="1" FontSize="20" Margin="5" Click="shareButton_Click"
                    Content="{Binding isShared, Converter={StaticResource ShareTextConverter} }"/>
        </Grid>
