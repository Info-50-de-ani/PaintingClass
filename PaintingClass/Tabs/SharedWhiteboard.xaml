<UserControl x:Class="PaintingClass.Tabs.SharedWhiteboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PaintingClass.Tabs" xmlns:PaintingClass="clr-namespace:PaintingClass"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1536">
    <DockPanel>
        <Grid DockPanel.Dock="Left" Width="150">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="6*"/>
            </Grid.RowDefinitions>
            <TextBlock Margin="10" Text="Tabla lui" VerticalAlignment="Center" Grid.Row="0"/>
            <Button x:Name="copyBoardButton" Content="Copiaza tabla" Margin="25" Grid.Row="1"/>
        <StackPanel Grid.Row="2">
                <Button x:Name="Kick" Margin="10" Content="Kick" Width="100" />
            </StackPanel>
        
        </Grid>
        <PaintingClass:Whiteboard x:Name="whiteboard" Height="726" 
          Width="1208" BorderBrush="Black" BorderThickness="5" Background="White"/>
    </DockPanel>
</UserControl>
