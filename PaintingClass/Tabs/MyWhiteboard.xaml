<UserControl
    x:Class="PaintingClass.Tabs.MyWhiteboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:PaintingClass="clr-namespace:PaintingClass"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PaintingClass.Tabs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="800"
    d:DesignWidth="1536"
    mc:Ignorable="d">
    <!--  O sa fie inlocuita de un Grid la un moment dat  -->
    <Canvas x:Name="myWhiteboardCanvas" Background="White">
        <Border
            Canvas.Left="57"
            Canvas.Top="25"
            Width="170"
            Height="726"
            BorderBrush="Black"
            BorderThickness="5">
            <StackPanel
                x:Name="toolbar"
                HorizontalAlignment="Center"
                Orientation="Vertical" />
        </Border>
        <PaintingClass:Whiteboard
            x:Name="whiteboard"
            Canvas.Left="286"
            Canvas.Top="25"
            Width="1208"
            Height="726"
            Background="White"
            BorderBrush="Black"
            BorderThickness="5" />
    </Canvas>
</UserControl>
