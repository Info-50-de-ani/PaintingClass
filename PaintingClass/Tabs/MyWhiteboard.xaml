<UserControl
    x:Class="PaintingClass.Tabs.MyWhiteboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:PaintingClass="clr-namespace:PaintingClass"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PaintingClass.Tabs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="800"
    d:DesignWidth="1536"
    mc:Ignorable="d">

    <!--  O sa fie inlocuita de un Grid la un moment dat  -->
    <Grid x:Name="myWhiteboardGrid" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="6*" />
        </Grid.ColumnDefinitions>

        <!--#region tool bar-->
        <Border
            Grid.Column="0"
            Margin="20"
            BorderBrush="Black"
            BorderThickness="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*" />
                    <RowDefinition Height="2*" />
                </Grid.RowDefinitions>
                <StackPanel
                    x:Name="toolbar"
                    Grid.Row="0"
                    Orientation="Vertical" />
                <!--  Grid cu setari pt tooluri  -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  buton pentru culori  -->
                    <Button
                        Grid.Row="0"
                        Click="ColorMenu_Button_Click"
                        Content="Culori" />

                    <!-- buton pentru grosime-->
                    <Button
                        Grid.Row="1"
                        Click="GrosimeMenu_Button_Click"
                        Content="Grosimi linii" />
                    
                    <Button
                        Grid.Row="2"
                        Click="Marime_Font_Button_Click"
                        Content="Font size" />

                </Grid>
            </Grid>
        </Border>
        <!--#endregion-->


        <Grid Grid.Column="1" Panel.ZIndex="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="9*" />
                <RowDefinition Height="1.98*" />
                <RowDefinition Height="1.98*" />
                <RowDefinition Height="1.98*" />
                <RowDefinition Height="0.326*" />
            </Grid.RowDefinitions>

            <!--#region Color panel-->
            <Grid
                x:Name="ColorPanel"
                Grid.Row="1"
                Grid.RowSpan="1">
                <Grid.RenderTransform>
                    <ScaleTransform ScaleX="0" />
                </Grid.RenderTransform>
                <Border
                    x:Name="border1"
                    Background="Transparent"
                    CornerRadius="15" />
                <Grid Panel.ZIndex="1">
                    <StackPanel VerticalAlignment="Center">
                        <Button
                            Background="Red"
                            Click="Color_Buton_Click"
                            Content="Rosu"
                            Tag="Red" />
                        <Button
                            Background="Yellow"
                            Click="Color_Buton_Click"
                            Content="Galben"
                            Tag="Yellow" />
                        <Button
                            Background="Green"
                            Click="Color_Buton_Click"
                            Content="Verde"
                            Tag="Green" />
                        <Button
                            Background="Black"
                            Click="Color_Buton_Click"
                            Content="Negru"
                            Foreground="White"
                            Tag="Black" />
                    </StackPanel>
                </Grid>
            </Grid>
            <!--#endregion-->

            <!--#region Thickness panel-->
            <Grid
                x:Name="ThicknessPanel"
                Grid.Row="2"
                Grid.RowSpan="1">
                <Grid.RenderTransform>
                    <ScaleTransform ScaleX="0" />
                </Grid.RenderTransform>
                <Border
                    x:Name="border2"
                    Background="Transparent"
                    CornerRadius="15" />
                <Grid Panel.ZIndex="1">
                    <StackPanel VerticalAlignment="Center">
                        <Button
                            Click="Grosime_Buton_Click"
                            Content="Subtire"
                            Tag="Subtire" />
                        <Button
                            Click="Grosime_Buton_Click"
                            Content="Normal"
                            Tag="Normal" />
                        <Button
                            Click="Grosime_Buton_Click"
                            Content="Gros"
                            Tag="Gros" />
                        <Button
                            Click="Grosime_Buton_Click"
                            Content="Foarte gros"
                            Tag="Foarte gros" />
                    </StackPanel>
                </Grid>
            </Grid>
            <!--#endregion-->

        </Grid>

        <!--#region Formula Panel-->
        <Grid
            x:Name="FormulaPanelParentGrid"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Panel.ZIndex="2"
            Visibility="Hidden">
            <Grid.Effect>
                <DropShadowEffect
                    BlurRadius="20"
                    Opacity="0.6"
                    ShadowDepth="3"
                    Color="Black" />
            </Grid.Effect>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>
            <Border
                Grid.Row="1"
                Margin="10"
                Padding="8"
                Background="#4ECDC4"
                BorderBrush="#1A535C"
                BorderThickness="4"
                CornerRadius="20">
                <Grid x:Name="FormulaPanel">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                </Grid>
            </Border>
        </Grid>
        <!--#endregion-->
        <Viewbox
            x:Name="myWhiteboardViewBox"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Stretch="Uniform">

            <PaintingClass:Whiteboard
                AllowDrop="True"
                x:Name="whiteboard"
                Grid.ColumnSpan="2"
                Width="160"
                Height="90"
                Background="Transparent"
                BorderBrush="Black"
                BorderThickness="1" />
        </Viewbox>
        <Canvas
            x:Name="myWhiteboardCanvas"
            Grid.Column="1"
            Grid.ColumnSpan="2" />
    </Grid>
</UserControl>

