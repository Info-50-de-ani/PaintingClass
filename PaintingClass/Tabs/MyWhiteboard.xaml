<UserControl
    x:Class="PaintingClass.Tabs.MyWhiteboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:PaintingClass="clr-namespace:PaintingClass"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PaintingClass.Tabs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="800"
    d:DesignWidth="1536"
    mc:Ignorable="d">

    <!--  O sa fie inlocuita de un Grid la un moment dat  -->
    <Canvas x:Name="myWhiteboardCanvas" Background="White">
        <Border
            Canvas.Left="57"
            Canvas.Top="25"
            Width="170"
            Height="726"
            BorderBrush="Black"
            BorderThickness="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*" />
                    <RowDefinition Height="2*" />
                </Grid.RowDefinitions>
                <StackPanel
                    x:Name="toolbar"
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    Orientation="Vertical" />
                <!--  Grid cu setari pt tooluri  -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  buton pentru culori  -->
                    <Button
                        Grid.Row="0"
                        Click="ColorMenu_Button_Click"
                        Content="Culori">
                    </Button>
                    <Button
                        Grid.Row="1"
                        Click="Grosime_Button_Click"
                        Content="Grosimi linii" />
                    <Button
                        Grid.Row="2"
                        Click="Marime_Font_Button_Click"
                        Content="Font size" />

                </Grid>
            </Grid>
        </Border>
        <!--#region Color panel-->

        <Grid
            x:Name="ColorPanel"
            Canvas.Left="246"
            Canvas.Top="463"
            Width="233"
            Height="288"
            Panel.ZIndex="2">
            <Grid.RenderTransform>
                <ScaleTransform ScaleX="0" />
            </Grid.RenderTransform>
            <Border
                x:Name="border"
                Background="#9D9D9D"
                CornerRadius="15" />
            <Grid Panel.ZIndex="1">
                <StackPanel VerticalAlignment="Center">
                    <Button
                        Background="Red"
                        Click="Color_Buton_Click"
                        Content="Rosu"
                        Tag="Red" />
                    <Button
                        Background="Yellow"
                        Click="Color_Buton_Click"
                        Content="Galben"
                        Tag="Yellow" />
                    <Button
                        Background="Green"
                        Click="Color_Buton_Click"
                        Content="Verde"
                        Tag="Green" />
                    <Button
                        Background="Black"
                        Click="Color_Buton_Click"
                        Content="Negru"
                        Foreground="White"
                        Tag="Black" />
                    <Button Content="Rosu" />
                    <Button Content="Rosu" />
                </StackPanel>
            </Grid>
        </Grid>
        <!--#endregion-->
        <PaintingClass:Whiteboard
            x:Name="whiteboard"
            Canvas.Left="286"
            Canvas.Top="25"
            Width="1208"
            Height="726"
            Background="White"
            BorderBrush="Black"
            BorderThickness="5" />
    </Canvas>
</UserControl>

